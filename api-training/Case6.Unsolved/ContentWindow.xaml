<UserControl x:Class="Case6.Unsolved.ContentWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Case6.Unsolved"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel Margin="5" Grid.Column="1">
            <Label Content="Items" FontSize="22"/>
            <ListView x:Name="ItemList" 
                      SelectionChanged="ItemList_SelectionChanged" 
                      Width="250"
                      Height="250"/>
        </StackPanel>

        <StackPanel Margin="25 50 0 0">
            <Label Content="Times selected item has been sold:" FontSize="18"/>
            <Label x:Name="CountLabel" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>
